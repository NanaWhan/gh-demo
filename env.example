# Environment Variables Template
# Copy this file to .env and fill in your actual values

# API Configuration (Production backend)
NUXT_PUBLIC_API_BASE=https://glohorizonapi.fly.dev

# Site Configuration
NUXT_PUBLIC_SITE_URL=https://yourdomain.com

# EmailJS Configuration (for fallback notifications)
EMAILJS_SERVICE_ID=your_service_id
EMAILJS_TEMPLATE_ID=your_template_id  
EMAILJS_PUBLIC_KEY=your_public_key

# Analytics (if needed)
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Local Development API (uncomment for local backend testing)
# NUXT_PUBLIC_API_BASE=http://localhost:5080 